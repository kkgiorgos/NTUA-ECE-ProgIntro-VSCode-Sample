{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/scripts/make.ps1"
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/make.sh"
            },
            "group": "build"
        },
        {
            "label": "execute",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/scripts/execute.ps1",
                "args": [
                    "${input:executableWindows}"
                ]
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/execute.sh",
                "args": [
                    "${input:executableLinux}"
                ]
            },
            "group": "build"
        },
        {
            "label": "upload",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/scripts/upload.ps1"
            },
            "linux": {
                "command": "${workspaceFolder}/scripts/upload.sh"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/../bin/${fileBasenameNoExtension}",
                "-I${fileDirname}/../inc/"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "inputs": [
        {
            "type": "command",
            "id": "executableWindows",
            "command": "shellCommand.execute",
            "args": {
                "command": "for %f  in (\"./src/*.cpp\") do @echo %~nf ",
                "cwd": "${workspaceFolder}",
                "env": {
                    "WORKSPACE": "${workspaceFolder[0]}",
                    "FILE": "${file}",
                    "PROJECT": "${workspaceFolderBasename}"
                },
                "description": "Select File to execute"
            }
        },
        {
            "type": "command",
            "id": "executableLinux",
            "command": "shellCommand.execute",
            "args": {
                "command": "ls src | sed -e 's/\\.cpp$//'",
                "cwd": "${workspaceFolder}",
                "env": {
                    "WORKSPACE": "${workspaceFolder[0]}",
                    "FILE": "${file}",
                    "PROJECT": "${workspaceFolderBasename}"
                },
                "description": "Select File to execute"
            }
        }
    ]
}
